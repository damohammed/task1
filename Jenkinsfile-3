pipeline {
  agent {
    docker { image 'jenkins/jenkins' 
    args '-u root:sudo' } 
  } 
  stages { 
    stage('Install Docker')  { 
      steps {
        sh ''' 
        apt update -y 
        apt install apt-utils
        apt install docker.io
        docker ps -a
        ''' } 
           } 
         }
       }
